generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")  
}

model Usuario{
  id    Int  @id @default(autoincrement())
  senha Int  @unique
  tipo  Tipo @default(CLIENTE)
  coment Comentario[]
}

model Equipamento {
  id        Int      @id @default(autoincrement())
  equipamento String
  imagem     String @db.VarChar(255)
  descricao  String
  coment Comentario[]
}

model Comentario{
    id        Int      @id @default(autoincrement())
    comentario String
    equipamentoId Int
    usuarioId Int
    data  DateTime @default(now())
    equipamento Equipamento @relation(fields: [equipamentoId], references: [id], onDelete: Cascade)
    usuario Usuario @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
}

enum Tipo {
  ADMIN
  CLIENTE
}